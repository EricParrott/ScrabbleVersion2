<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@android:color/background_dark"
    tools:context="com.example.eric.scrabbleversion2.MainActivity">

    <TextView
        android:id="@+id/firstText"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:text="My Letters: "
        android:fontFamily="casual"
        android:textStyle="normal|bold"
        android:background="@android:color/background_dark"
        android:textColor="@android:color/background_light" />


    <EditText
        android:id="@+id/input_letters"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:ems="8"
        android:maxLength="8"
        android:background="#e0e0eb"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:fontFamily="casual"
        android:typeface="normal"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_below="@+id/firstText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/find_results_button"
        android:layout_below="@+id/input_letters"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="Find Words"
        android:fontFamily="casual"
        android:textStyle="normal|bold"
        style="@style/Widget.AppCompat.Button.Colored"
        android:elevation="0dp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="125dp"
        android:layout_below="@+id/listView"
        android:layout_marginTop="10dp"
        android:layout_height="20dp"
        android:background="#e0e0eb"
        android:layout_marginBottom="10dp"/>

    <GridLayout
        android:id="@+id/gridLayout1"
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:columnCount="4"
        android:rowCount="1"
        android:orientation="horizontal"
        tools:context=".GridLayoutActivity"
        android:layout_below="@+id/spinner"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="5dp"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/button1"
            android:layout_gravity="left|top"
            android:text="P1"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_row="0"
            android:layout_column="0"
            android:fontFamily="casual"
            android:textStyle="normal|bold"
            style="@style/Widget.AppCompat.Button.Colored" />
        <Button
            android:id="@+id/button2"
            android:layout_gravity="left|top"
            android:text="P2"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_column="1"
            android:fontFamily="casual"
            android:textStyle="normal|bold"
            style="@style/Widget.AppCompat.Button.Colored" />

        <Button
            android:id="@+id/button3"
            android:layout_gravity="left|top"
            android:text="P3"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_column="2"
            android:fontFamily="casual"
            android:textStyle="normal|bold"
            style="@style/Widget.AppCompat.Button.Colored" />

        <Button
            android:id="@+id/button4"
            android:layout_gravity="left|top"
            android:text="P4"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_column="3"
            android:fontFamily="casual"
            android:textStyle="normal|bold"
            style="@style/Widget.AppCompat.Button.Colored" />
    </GridLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:background="#e0e0eb"
        android:layout_height="200dp"
        android:layout_below="@+id/find_results_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </ListView>

    <GridLayout
        android:id="@+id/gridLayout2"
        android:layout_width="match_parent"
        android:columnCount="4"
        android:rowCount="2"
        android:orientation="horizontal"
        tools:context=".GridLayoutActivity"
        android:layout_height="50dp"
        android:layout_below="@+id/gridLayout1"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true">

        <EditText
            android:id="@+id/add_p1_pts_text_field"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:textSize="12sp"
            android:textColor="@android:color/background_dark"
            android:ems="3"
            android:maxLength="3"
            android:textAlignment="center"
            android:background="#e0e0eb"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_marginRight="35dp"
            android:layout_marginLeft="6dp"
            android:inputType="number"
            />

        <EditText
            android:id="@+id/add_p2_pts_text_field"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:textSize="12sp"
            android:ems="3"
            android:maxLength="3"
            android:textAlignment="center"
            android:background="#e0e0eb"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_marginRight="35dp"
            android:inputType="number"
            />

        <EditText
            android:id="@+id/add_p3_pts_text_field"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:textSize="12sp"
            android:ems="3"
            android:maxLength="3"
            android:textAlignment="center"
            android:background="#e0e0eb"
            android:layout_column="2"
            android:layout_row="0"
            android:layout_marginRight="40dp"
            android:inputType="number"
            />

        <EditText
            android:id="@+id/add_p4_pts_text_field"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:textSize="12sp"
            android:ems="3"
            android:maxLength="3"
            android:textAlignment="center"
            android:background="#e0e0eb"
            android:layout_column="3"
            android:layout_row="0"
            android:inputType="number"
            />

        <TextView
            android:id="@+id/player_one_score_tally"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:textStyle="normal|bold"
            android:textSize="15dp"
            android:text="0"
            android:layout_column="0"
            android:layout_row="1"
            android:textColor="@android:color/background_light"
            android:layout_width="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/player_two_score_tally"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:fontFamily="casual"
            android:textStyle="normal|bold"
            android:textSize="15dp"
            android:text="0"
            android:layout_column="1"
            android:layout_row="1"
            android:textColor="@android:color/background_light"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/player_three_score_tally"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:fontFamily="casual"
            android:textStyle="normal|bold"
            android:textSize="15dp"
            android:text="0"
            android:layout_column="2"
            android:layout_row="1"
            android:textColor="@android:color/background_light"
            android:layout_marginTop="5dp"

            />

        <TextView
            android:id="@+id/player_four_score_tally"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:fontFamily="casual"
            android:textStyle="normal|bold"
            android:textSize="15dp"
            android:text="0"
            android:layout_column="3"
            android:layout_row="1"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/background_light"
            />
    </GridLayout>

    <GridLayout
        android:id="@+id/gridLayout3"
        android:layout_below="@+id/gridLayout2"
        android:layout_width="fill_parent"
        android:columnCount="3"
        android:rowCount="1"
        android:layout_height="fill_parent">

        <Button
            android:id="@+id/start_timer_button"
            android:layout_gravity="left|top"
            android:text="Start Timer"
            android:fontFamily="casual"
            android:textStyle="normal|bold"
            android:layout_row="0"
            android:layout_column="0"
            style="@style/Widget.AppCompat.Button.Colored"/>

        <Button
            android:id="@+id/stop_timer_button"
            android:layout_gravity="left|top"
            android:text="Reset"
            android:fontFamily="casual"
            android:textStyle="normal|bold"
            android:layout_row="0"
            android:layout_column="1"
            style="@style/Widget.AppCompat.Button.Colored"/>

        <TextView
            android:text="180"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/count_down_timer"
            android:layout_column="2"
            android:fontFamily="casual"
            android:textColor="@android:color/background_light"
            android:textSize="30sp"
            android:textStyle="normal|bold"
            />
    </GridLayout>

</RelativeLayout>
